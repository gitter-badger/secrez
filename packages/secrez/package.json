{
  "name": "secrez",
  "version": "0.4.0",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf build",
    "dev": "node src -c `pwd`/tmp/secrez-dev -i 1e3",
    "lint": "eslint -c .eslintrc 'src/**/*.js' 'test/**/*.js'",
    "all-tests": "find test/** -name '*.test.js' | xargs ./node_modules/.bin/mocha -R spec",
    "test-only": "./node_modules/.bin/mocha test/*.test.js test/**/*.test.js",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text ./node_modules/.bin/_mocha test/*.test.js test/**/*.test.js --exit",
    "posttest": "nyc check-coverage --statements 95 --branches 95 --functions 95 --lines 95"
  },
  "disabledScripts": {
    "coverage": "rm -rf tmp && mkdir tmp && cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text ./node_modules/.bin/_mocha test/src/*.js",
    "posttest": "istanbul check-coverage --statements 85 --branches 70 --functions 85 --lines 85"
  },
  "dependencies": {
    "@secrez/core": "^0.4.0",
    "@secrez/fs": "^0.4.0",
    "chalk": "^3.0.0",
    "command-line-args": "^5.1.1",
    "external-editor": "^3.1.0",
    "fs-extra": "^8.1.0",
    "homedir": "^0.6.0",
    "inquirer": "^7.1.0",
    "inquirer-command-prompt": "0.0.24",
    "lodash": "^4.17.15",
    "tiny-cli-editor": "^0.1.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chalk": "^3.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-node": "^11.0.0",
    "istanbul": "^0.4.5",
    "log": "^6.0.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "test-console": "^1.1.0"
  },
  "bin": {
    "secrez": "cli/secrez"
  },
  "preferGlobal": "true",
  "description": "A secrets manager in times of crypto coins.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sullof/secrez.git"
  },
  "author": {
    "name": "Francesco Sullo",
    "email": "francesco@sullo.co"
  },
  "bugs": {
    "url": "https://github.com/sullof/secrez/issues"
  },
  "homepage": "https://github.com/sullof/secrez#readme",
  "engines": {
    "node": ">=10.0.0"
  },
  "gitHead": "42cbc519dd2802a1e03c6203bb724c726c2bfb79"
}
