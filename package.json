{
  "name": "root",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "test": "lerna run test --stream -- --colors",
    "test-only": "lerna run test-only --stream -- --colors",
    "lint": "lerna run lint",
    "reset": "bin/clean-all-modules.sh && lerna bootstrap",
    "patch-versions": "node bin/patch-versions.js",
    "pre-push": "npm run lint && bin/pre-push.sh",
    "publish": "npm run test && node bin/publish-changed-packages.js"
  },
  "license": "MIT",
  "dependencies": {
    "yarn": "^1.22.4"
  }
}
